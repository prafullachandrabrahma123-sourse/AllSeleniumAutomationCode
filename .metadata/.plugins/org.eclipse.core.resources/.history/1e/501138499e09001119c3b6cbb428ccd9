package CoreJavaTopics;

import java.util.HashMap;
import java.util.HashSet;
import java.util.Map;
import java.util.Set;

public class A005_CoreJava_PrintingPyramidTriangle {

	public static void main(String[] args) {
		
		int k = 1;
		
		for(int i =0; i<4;i++) {
			System.out.println();            // Println - generally use to print in new line.
			 for(int j = 1; j<=4-i;j++) {
					System.out.print(k);    //print - generally use to print in same line.

					k++;
			 }
		}

	}
 }



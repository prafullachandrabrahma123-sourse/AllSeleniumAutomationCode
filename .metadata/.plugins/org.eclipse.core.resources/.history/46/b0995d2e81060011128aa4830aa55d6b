package NumberRelatedPrograms;

public class B_10LargestNumberFromAnArray {

	public static void main(String[] args) {

		int[] arr = {10, 40, 30, 20};

		int max = arr[0];
		for(int i = 1; i < arr.length; i++) {
		    if(arr[i] > max) {
		        max = arr[i];
		    }
		}
		System.out.println(max);

	}

}
